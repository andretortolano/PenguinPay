<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PenguinPay" />

    <style name="PenguinPay.AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="buttonStyle">@style/PenguinPay.Button.Primary</item>
        <item name="android:textViewStyle">@style/PenguinPay.TextView</item>
        <item name="textInputStyle">@style/PenguinPay.TextInputLayout</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="circularProgressIndicatorStyle">@style/PenguinPay.CircularProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/PenguinPay.LinearProgressIndicator</item>
    </style>

</resources>